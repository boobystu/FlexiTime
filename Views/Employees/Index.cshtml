@model IEnumerable<FlexiTime.ViewModels.EmployeeViewModel>

<h2>Employees</h2>
 
<form asp-controller="Employees" asp-action="Index" method="get">
    <p>
        <input type="text" name="id">
        <input type="submit" value="Filter by name" />
    </p>
</form>

@foreach(var employee in Model)
{
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>@employee.Name</h3>
            </div>
            <div class="panel-body">
                <span>Home Office: @employee.HomeOffice</span>
                <span>Email: @employee.Email</span>
                <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
            </div>
        </div>
    </div>
}

